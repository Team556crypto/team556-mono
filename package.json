{
  "name": "team556-mono",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"turbo run dev\" \"cd apps/main-api && go run cmd/api/main.go\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "wallet:run:web": "yarn workspace wallet web",
    "wallet:run:ios": "yarn workspace wallet ios",
    "wallet:run:android": "yarn workspace wallet android",
    "wallet:build:web": "yarn workspace wallet build:web",
    "wallet:build:dev": "yarn workspace wallet eas build --profile development",
    "wallet:build:prod": "yarn workspace wallet eas build --profile production",
    "pos:run:web": "yarn workspace pos web",
    "pos:run:ios": "yarn workspace pos ios",
    "pos:run:android": "yarn workspace pos android",
    "pos:build:web": "yarn workspace pos build:web",
    "pos:build:dev": "yarn workspace pos eas build --profile development",
    "pos:build:prod": "yarn workspace pos eas build --profile production",
    "prototype:run:web": "yarn workspace prototype web",
    "prototype:run:ios": "yarn workspace prototype ios",
    "prototype:run:android": "yarn workspace prototype android",
    "prototype:build:web": "yarn workspace prototype build:web",
    "prototype:build:dev": "yarn workspace prototype eas build --profile development",
    "prototype:build:prod": "yarn workspace prototype eas build --profile production",
    "solana-api:dev": "yarn workspace solana-api dev",
    "solana-api:build": "yarn workspace solana-api build",
    "solana-api:start": "yarn workspace solana-api start",
    "token:build": "yarn workspace token-core build",
    "deploy:solana-api": "flyctl deploy -a team556-solana-api -c apps/solana-api/fly.toml",
    "deploy:main-api": "flyctl deploy -a team556-main-api -c apps/main-api/fly.toml",
    "build:wallet-web": "cd apps/wallet && npx expo export --platform web --clear && cd ../..",
    "deploy:wallet-web": "cd apps/wallet && flyctl deploy && cd ../..",
    "deploy:wallet-web:full": "yarn build:wallet-web && yarn deploy:wallet-web"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*"
  ],
  "dependencies": {
    "@solana/spl-token": "^0.3.8"
  }
}